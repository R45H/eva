// HEADER
header.header
	.toggle.visible-xs
		span.toggle__line
		span.toggle__line
		span.toggle__line

	.header__left
		a.logo.header__logo(href="/")
			img.logo__img(src="img/logo.png")

	.header__center.hidden-xs
		ul.menu
			-
				var items = [
					'Bodies',
					'Lingerie',
					'T-Shirts'
				]

			each item in items
				li.menu__item
					a.menu__link(href='#')= item

	.header__right
		ul.s-menu
			-
				var items = [
				'My account',
				'Customer care',
				'Account'
				]

			each item in items
				li.s-menu__item
					a.s-menu__link(href='#')= item

			li.s-menu__item.s-menu__item_search
				a.s-menu__link(href='#')
			li.s-menu__item.s-menu__item_bag
				a.s-menu__link(href='#')
